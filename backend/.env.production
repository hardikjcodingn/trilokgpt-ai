# TrilokGPT Production Configuration
# Copy this to .env in the backend directory

# ========== ENVIRONMENT ==========
NODE_ENV=production
PORT=8000

# ========== OLLAMA CONFIGURATION ==========
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
EMBEDDING_MODEL=nomic-embed-text

# ========== SECURITY ==========
# API Key for admin operations (change this!)
ADMIN_API_KEY=admin_sk_change_this_to_random_string_12345

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=*

# ========== RATE LIMITING ==========
# Global rate limit: 1000 requests per 15 minutes
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Per-endpoint limits
UPLOAD_LIMIT_WINDOW_MS=3600000
UPLOAD_LIMIT_MAX=100

QUERY_LIMIT_WINDOW_MS=60000
QUERY_LIMIT_MAX=50

# ========== STORAGE ==========
# Vector store path
VECTOR_STORE_PATH=./vectors/store.json

# File upload path
UPLOAD_PATH=./uploads

# ========== LOGGING ==========
LOG_LEVEL=info
LOG_FORMAT=combined

# ========== DEPLOYMENT ==========
# Set to your actual domain in production
API_URL=http://localhost:8000
DEPLOY_PLATFORM=local

# ========== OPTIONAL: HTTPS ==========
# HTTPS_KEY_PATH=/path/to/key.pem
# HTTPS_CERT_PATH=/path/to/cert.pem

# ========== OPTIONAL: DATABASE (for scalability) ==========
# REDIS_URL=redis://localhost:6379
# DB_CONNECTION_STRING=postgresql://user:pass@host/db
